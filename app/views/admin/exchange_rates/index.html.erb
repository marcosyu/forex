<p id="notice"><%= notice %></p>

<h1>Exchange Rates</h1>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Base currency</th>
      <th>Target currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exchange_rates.each do |exchange_rate| %>
      <tr>
        <td><%= exchange_rate.amount %></td>
        <td><%= exchange_rate.base_currency %></td>
        <td><%= exchange_rate.target_currency %></td>
        <td><%= link_to 'Show', [ :admin, exchange_rate ] %></td>
        <td><%= link_to 'Edit', edit_admin_exchange_rate_path(exchange_rate) %></td>
        <td><%= link_to 'Destroy', [:admin, exchange_rate], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exchange Rate', new_admin_exchange_rate_path %>
