<p id="notice">
  <%= notice %>
</p>
<div class="container">
  <div class="row">
    <div class="col-5">
      <div class="container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2> <strong>
                <%= @exchange_rate.base_currency %></strong>
              <strong>To</strong>
              <strong>
                <%= @exchange_rate.target_currency %></strong></h2>
          </div>
          <div class="panel-body">
            <p>
              <strong>Amount:
                <%= @exchange_rate.amount %>
            </p></strong>
          </div>
        </div>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_admin_exchange_rate_path(@exchange_rate) %> |
          <%= link_to 'Back', admin_exchange_rates_path %>
        </div>
        <br />
      </div>
    </div>
    <% if @exchange_rate.historical_duration.present? %>
    <%= chart_data %>
    <div class="col-12">
      <table class="table table-dark" id="histogram">
        <thead>
          <tr>
            <th class="text-center"> #</th>
            <th class="text-center">Year</th>
            <th class="text-center">Week #</th>
            <th class="text-center">Rate</th>
            <th class="text-center">Value</th>
            <th class="text-center">Profit/Loss</th>
          </tr>
        </thead>
        <tbody>
          <% @exchange_rate.historical_duration.keys.each_with_index do |date, i| %>
          <tr>
            <td class="text-center">
              <%= i+1%>
            </td>
            <td class="text-center">
              <%=Date.parse(date).strftime("%Y")%>
            </td>
            <td class="text-center">
              <%=Date.parse(date).strftime("%U") %>
            </td>
            <td class="text-center">
              <%= get_rate(date) %>
            </td>
            <td class="text-center">
              <%= convert_to(date).to_f.round(2) %>
            </td>
            <td class="text-center">
              <%= compute_profit(date)%>
            </td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
    <% end%>
  </div>
</div>