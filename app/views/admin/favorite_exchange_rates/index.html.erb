<p id="notice">
  <%= notice %>
</p>
<h1>Exchange Rates</h1>
<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Base currency</th>
      <th>Target currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%if @favorite_exchange_rates.present? %>
  <tbody>
    <% @favorite_exchange_rates.each do |favorite_exchange_rate| %>
    <tr>
      <td>
        <%= favorite_exchange_rate.amount %>
      </td>
      <td>
        <%= favorite_exchange_rate.base_currency %>
      </td>
      <td>
        <%= favorite_exchange_rate.target_currency %>
      </td>
      <td>
        <%= link_to 'Show', [ :admin, favorite_exchange_rate ] %>
      </td>
      <td>
        <%= link_to 'Edit', edit_admin_favorite_exchange_rate_path(favorite_exchange_rate) %>
      </td>
      <td>
        <%= link_to 'Destroy', [:admin, favorite_exchange_rate], method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <%end%>
</table>
<br>
<%= link_to 'New Exchange Rate', new_admin_favorite_exchange_rate_path %>